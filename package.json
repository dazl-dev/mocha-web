{
  "name": "mocha-web",
  "description": "Run mocha tests in chromium, using esbuild and playwright.",
  "version": "2.0.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./bin/mocha-web.js": "./bin/mocha-web.js",
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-web": "bin/mocha-web.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint",
    "prettify": "prettier . --write",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "esbuild": ">=0.20",
    "mocha": ">=7"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "create-listening-server": "^2.1.0",
    "express": "^4.21.2",
    "find-up": "^7.0.0",
    "glob": "^11.0.0",
    "mime": "^4.0.6",
    "playwright-core": "^1.49.1"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.49.1",
    "@types/chai": "^5.0.1",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.10",
    "@types/node": "20",
    "chai": "^5.1.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "mocha": "^11.0.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "files": [
    "bin",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-web.git"
}
