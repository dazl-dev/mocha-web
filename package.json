{
  "name": "mocha-web",
  "description": "Run mocha tests in chromium, using esbuild and playwright.",
  "version": "2.6.1",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./bin/mocha-web.js": "./bin/mocha-web.js",
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-web": "bin/mocha-web.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint",
    "prettify": "prettier . --write",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "esbuild": ">=0.20",
    "mocha": ">=7 || >=12.0.0-beta"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "create-listening-server": "^2.1.0",
    "express": "^5.2.1",
    "find-up": "^8.0.0",
    "glob": "^13.0.4",
    "mime": "^4.1.0",
    "playwright-core": "^1.58.2"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/browser-chromium": "^1.58.2",
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "20",
    "chai": "^6.2.2",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "mocha": "^12.0.0-beta-9",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "files": [
    "bin",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dazl-dev/mocha-web.git"
  }
}
