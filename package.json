{
  "name": "mocha-web",
  "description": "Run mocha tests in chromium, using esbuild and playwright.",
  "version": "2.3.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./bin/mocha-web.js": "./bin/mocha-web.js",
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-web": "bin/mocha-web.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint",
    "prettify": "prettier . --write",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "esbuild": ">=0.20",
    "mocha": ">=7"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "create-listening-server": "^2.1.0",
    "express": "^5.1.0",
    "find-up": "^7.0.0",
    "glob": "^11.0.2",
    "mime": "^4.0.7",
    "playwright-core": "^1.52.0"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.52.0",
    "@types/chai": "^5.2.2",
    "@types/express": "^5.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20",
    "chai": "^5.2.0",
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "mocha": "^11.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "files": [
    "bin",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wixplosives/mocha-web.git"
  }
}
