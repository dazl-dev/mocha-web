{
  "name": "mocha-web",
  "description": "Run mocha tests in chromium, using esbuild and playwright.",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-web": "bin/mocha-web.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint .",
    "prettify": "prettier . --write",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "esbuild": ">=0.20",
    "mocha": ">=7"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "create-listening-server": "^2.1.0",
    "express": "^4.19.1",
    "find-up": "^7.0.0",
    "glob": "^10.3.10",
    "mime": "^4.0.1",
    "playwright-core": "^1.42.1"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.42.1",
    "@types/chai": "^4.3.14",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "chai": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "~5.4.3"
  },
  "files": [
    "bin",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-web.git"
}
